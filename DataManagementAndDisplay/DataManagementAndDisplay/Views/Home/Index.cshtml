                                    oneLogData[j];
                                    $("tr").html(oneLogData[j]);
                                }
                            }*@
                        }
                    });
                }
                function formatDate(date) {
                    var hours = date.getHours();
                    var minutes = date.getMinutes();
                    var seconds = date.getSeconds();
                    if (hours < 10) {
                        hours = "0" + hours;
                    }
                    if (minutes < 10) {
                        minutes = "0" + minutes;
                    }
                    if (seconds < 10) {
                        seconds = "0" + seconds;
                    }
                    return (date.toLocaleDateString() + " " + hours + ":" + minutes + ":" + seconds);
                }
                function GetData() {
                    var SearchModel = {};
                    var timeControl = $(".time-control");
                    var Time = {};
                    SearchModel.Fields = [];
                    Time["InternalName"] = timeControl.attr('id');
                    Time["Value"] = timeControl.val();
                    SearchModel.Time = Time;

                    @for (int i = 1; i < Model.fields.Count; i++)
                    {
                        <text>
                        var Field = { };
                    Field["InternalName"] = "@Model.fields[i].InternalName";
                    var dataControl = $(".data-control@(i)");
                    Field["Value"] = dataControl.val();;
                        SearchModel.Fields[@i-1] = Field;
                        </text>

                    }
                    return SearchModel;
                }
            </script>
        </div>
    </div>
</div>
