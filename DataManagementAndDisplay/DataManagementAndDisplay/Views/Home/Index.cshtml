@model DataModel.Model
@{

    ViewData["Title"] = "Home Page";
}

<div class="text-center margin">
    <h1>Custom Data Manager</h1>
    <div class="style  ">
        <div class="search">
            <form id="form" style="position: fixed;">
                <h2>Search</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Model.timeField.DisplayName
                    <select id="@Model.timeField.InternalName" class="form-control time-control">
                        <option disabled selected></option>
                        @for (int i = 0; i < Model.timestamps.Count; i++)
                        {
                    <option value="@Model.timestamps[i].InternalName">@Model.timestamps[i].DisplayName</option>
                        }
                    </select>
                </div>
                @for (int i = 1; i < Model.fields.Count; i++)
                {

                    <div class="form-group">
                        <label class="control-label">@Model.fields[i].DisplayName</label>
                        <input class="form-control data-control" id="@Model.fields[i].InternalName" value="@Model.fields[i].Value" data-type="@Model.fields[i].FieldType.ToString()" />
                    </div>
                }

                <div class="form-group">
                    <input style="width:318px;" id="btnGet" type="submit" value="Search" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <button style="width:318px;" class="btn btn-success" type="reset">Clear</button>
                </div>
            </form>
        </div>
        <div class="loading"  style="position: fixed;">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div>
            <p class="messageToBeHidden"> Sorry, we didn't find any results that match these search criterias! </p>
                <table id="table-result" class="table-bordered justify-content-between tableToBeHidden" style="text-align:left;align-content:center;">
                    <tr >
                        <th>№</th>
                        @for (int i = 1; i < @Model.fields.Count; i++)
                        {
                            <th class="custom-table-heading">@Model.fields[i].DisplayName</th>
                        }
                        <th class="custom-table-heading">@Model.timeField.DisplayName</th>
                    </tr>
                </table>
        </div>
            <div class="list" id="AjaxResults">
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                <script src="~/js/site.js" asp-append-version="true"></script>
            </div>
        </div>
</div>
