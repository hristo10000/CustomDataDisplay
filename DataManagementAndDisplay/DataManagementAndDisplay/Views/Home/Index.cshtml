@model DataModel.Model
@{

    ViewData["Title"] = "Home Page";
}

<div class="text-center margin">
    <h1>Custom Data Manager</h1>
    <div class="style  ">
        <div class="search">
            <h2>Search</h2>
            <form id="form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Model.timeField.DisplayName
                    <select id="@Model.timeField.InternalName" class="form-control time-control">
                        <option disabled selected></option>
                        <option>30 minutes ago</option>
                        <option>1 hour ago</option>
                        <option>3 hours ago</option>
                        <option>8 hours ago</option>
                        <option>12 hours ago</option>
                        <option>24 hours ago</option>
                    </select>
                </div>
                @for (int i = 1; i < Model.fields.Count; i++)
                {

                    <div class="form-group">
                        <label class="control-label">@Model.fields[i].DisplayName</label>
                        <input class="form-control data-control@(i)" asp-for="@Model.fields[i].Value" value="@Model.fields[i].Value" />
                    </div>
                }

                <div class="form-group">
                    <input style="width:318px;" id="btnGet" type="submit" value="Search" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <button style="width:318px;" class="btn btn-success" asp-action="Index">Clear</button>
                </div>
            </form>
        </div>

        <div id="table-result">
            <table class="tableToBeReplaced">
            </table>
        </div>
        <div class="list" id="AjaxResults">

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            <script>
                $(document).ready(function () {
                    $("#form").submit(function (event) {
                        event.preventDefault();
                        SearchAndDisplay();
                    });
                    SearchAndDisplay();
                });

                function SearchAndDisplay() {
                    console.log("here");
                    var form_data = GetData();
                    console.log(form_data);
                    $.ajax({
                        type: "POST",
                        url: "/Search",
                        data: JSON.stringify(form_data),
                        contentType: 'application/json',
                        dataType: 'json',
                        success: function (JsonData) {
                            var tableNames = [];
                            tableNames = Object.getOwnPropertyNames(JsonData[0]);
                            console.log(tableNames);
                            var table = $('<table>').addClass('table-bordered tableToBeReplaced justify-content-between').css('width', '1000px');
                            row = '<tr><th>' + '№' + '</th>';
                            for (var i = 0; i < tableNames.length; i++) {
                                var dispayName = tableNames[i].replace("customDimensions_", "");
                                row += '<th>' + dispayName + '</th>';
                            }
                            row += "</tr>";
                            table.append(row);
                            for (i = 0; i < JsonData.length; i++) {
                                row = '<tr><td></td>';
                                for (var j = 0; j < tableNames.length; j++) {
                                    if (tableNames[j] == "customDimensions_Date") {
                                        var date = new Date(JsonData[i][tableNames[j]]);
                                        row += '<td>' + formatDate(date) + '</td>';
                                    }
                                    else {
                                        row += '<td>' + JsonData[i][tableNames[j]] + '</td>';
                                    }
                                }
                                row += '</tr>'
                                table.append(row);
                                $('#table-result').append(table);
                            }
                            $(".tableToBeReplaced").replaceWith(table);
